<body>
<div class="container">
    <div class="title"><h2>Register</h2></div>
  
        <div class="username details">
            <label for="Username"><span class="strict">*</span> Username:</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="firstname details">
            <label for="firs-name"><span class="strict">*</span> Full name:</label>
            <input type="text" id="full-name" name="fname" required>
        </div>
        <div class="secondname details">
            <label for="specialization"><span class="strict">*</span> Specialization:</label>
            <input type="text" id="specialization" name="specialization" required>
        </div>
        <div class="birthday details">
            <label for="date"><span class="strict">*</span> Birht date:</label>
            <input type="date" id="birth-date" name="birth" required>
        </div>
        <div class="address details">
            <label for="address">Address:</label>
            <input type="text" id="address" name="adress">
        </div>
        <div class="country details">
            <label for="country">Country:</label>
            <select id="country" name="country" required>
                <option value="" disabled selected>Select your country</option>
                <option value="Afghanistan">Afghanistan</option>
                <option value="Albania">Albania</option>
                <option value="Algeria">Algeria</option>
                <option value="Zimbabwe">Zimbabwe</option>
            </select>
        </div>
        <div class="email details">
           <label for="email"><span class="strict">*</span> E-mail:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="password details">
            <label for="password"><span class="strict">*</span> Password:</label> 
            <input type="password" id="password" name="password" required>
        </div>
        <div class="btn">
            <button type="submit" onclick="signUp()">Register</button>
            
        </div>
    
</div>
</body>
