                    <a href="#" class="add-project-done" id="add-course-done">Done</a>
                    <a href="#" class="add-project-cancle" id="add-course-cancle">Cancle</a>
                </div>
            </div>
           
            <div class="add-project-container">
                <div class="add-project-title">
                    <label for="title">Title</label>
                    <input type="text" id="course-title" placeholder="Course title" required>
                </div>
                <div class="add-project-author">
                    <label for="author">Lecture count</label>
                    <input type="text" id="course-count" placeholder="Lectures" required>
                </div>
                <div class="add-project-date">
                    <label for="date">Date</label>
                    <input type="date" id="course-date" placeholder="Date" required>
                </div>
                <div class="add-project-special">
                    <label for="special">Special</label>
                    <input type="text" id="course-special" placeholder="Course special" required>
                </div>
                <div class="add-project-title">
                    <label for="link">Telegram link</label>
                    <input type="text" id="course-link" placeholder="Course gruop" required>
                </div>
                <div class="add-project-description">
                    <label for="description">Description</label>
                    <textarea name="description" id="course-description"></textarea>
                </div>
            </div>
            
        </div>

