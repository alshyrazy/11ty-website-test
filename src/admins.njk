        <div class="add-project" id="add-project-menu">
            <div class="add-project-header">
                <h3>New project</h3>
                <div>
                    <a href="#" class="add-project-done" id="add-project-done">Done</a>
                    <a href="#" class="add-project-cancle" id="add-project-cancle">Cancle</a>
                </div>
            </div>
           
            <div class="add-project-container">
                <div class="add-project-title">
                    <label for="title">Title</label>
                    <input type="text" id="project-title" placeholder="Project title" required>
                </div>
                <div class="add-project-author">
                    <label for="author">Author</label>
                    <input type="text" id="project-author" placeholder="Author name" required>
                </div>
                <div class="add-project-date">
                    <label for="date">Date</label>
                    <input type="date" id="project-date" placeholder="Date" required>
                </div>
                <div class="add-project-special">
                    <label for="special">Special</label>
                    <input type="text" id="project-special" placeholder="Project special" required>
                </div>
                <div class="add-project-title">
                    <label for="title">Status</label>
                    <input type="text" id="project-status" placeholder="Project status" required>
                </div>
                <div class="add-project-title">
                    <label for="link">Telegram link</label>
                    <input type="text" id="project-link" placeholder="Project gruop" required>
                </div>
                <div class="add-project-deadline">
                    <label for="deadline">Deadline</label>
                    <input type="date" id="project-deadline" placeholder="Deadline" required>
                </div>
                <div class="add-project-description">
                    <label for="description">Description</label>
                    <textarea name="description" id="project-description"></textarea>
                </div>
            </div>
            
        </div>

        <div class="add-project" id="add-event-menu" >
            <div class="add-project-header">
                <h3>New event</h3>
                <div>
                    <a href="#" class="add-project-done" id="add-event-done">Done</a>
                    <a href="#" class="add-project-cancle" id="add-event-cancle">Cancle</a>
                </div>
            </div>
           
            <div class="add-project-container" >
                <div class="add-project-title">
                    <label for="title">Title</label>
                    <input type="text" id="event-title" placeholder="Event title" required>
                </div>
                <div class="add-project-date">
                    <label for="date">Date</label>
                    <input type="date" id="event-date" placeholder="Date" required>
                </div>
                <div class="add-project-description">
                    <label for="description">Description</label>
                    <textarea name="description" id="event-description"></textarea>
                </div>
            </div>
            
        </div>

        <div class="add-project" id="add-course-menu">
            <div class="add-project-header">
                <h3>New Course</h3>
